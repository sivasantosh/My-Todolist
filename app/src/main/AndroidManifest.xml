<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytodolist" >

    <application
        android:name="com.example.mytodolist.MyApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newTodoActivity"
            android:label="@string/title_activity_todo_entry"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".EditTodoActivity"
            android:label="@string/title_activity_edit_entry"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>
